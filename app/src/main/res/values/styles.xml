<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Application Theme-->
    <style name="AppTheme" parent="MyTheme.Base" />

    <!-- Base application theme. -->
    <style name="MyTheme.Base" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentTransitions" tools:ignore="NewAPI">true</item>
    </style>

    <style name="AppTheme.FloatingLabelTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppButton">
        <item name="android:background">@drawable/button_pressed_background</item>
        <item name="android:textColor">@color/white_text_color</item>
    </style>

    <style name="AppTheme.DeepLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#ffdddddd</item>
    </style>

</resources>
